extends base.pug

block scripts 
    script(src='/static/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content
    nav#navbar 
        ul 
        div#logo
            img(src="/static/img/mic1.png")

            li #[a(href="/")  Home ]
            li #[a(href="/")  About]
            li #[a(href="/")  Services ] 
            li #[a(href="/")  Class Info  ]
            li #[a(href="/contact")  Contact Us ]


    div.container
     h1 Contact Us   
      form(action="/contact" method="post" class="myForm")
        input(type="text" class="myInput", name= "name" placeholder="Enter Your Name*") 
        input(type="phone" class="myInput", name= "phone" placeholder="Enter Your Phone No*") 
        input(type="email" class="myInput", name= "email" placeholder="Enter Your Email ID*") 
        input(type="text" class="myInput", name= "address" placeholder="Enter Your Address") 
        input(type="text" class="myInput", name= "concern" placeholder="Enter Your Concern") 
        div 
            button(class="myBtn") submit
             
            <input type="reset" class= "myBtn" >
