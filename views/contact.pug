    div#iconFooter
        img(src="/static/img/ficon.png" alt="facebook" class="vicon" )
        img(src="/static/img/iicon.png" alt="linkedin" class="vicon" )
        img(src="/static/img/licon.png" alt="instagram" class="vicon" )
